.landing {
  margin: rem(16);                                          // Rem Calc Function
  padding: rem(16);
  background: $primary;                                       // Color variables
  text-align: center;
  bodyFont();                                                // Font Stack Mixin

  p {
    font-size: rem(40);
  }

  button {
    margin: .5em
  }

  div {
    flexContainer(false, true, 'column');                // Flex Container Mixin
    position: relative;
    margin: rem(15) auto;
    padding: rem(20);
    border-radius: 5px;
    background: $white;

    > h1,
    > h2 {
      flexItem();                                             // Flex Item mixin
      displayFontBold();
    }

    &::before {
      arrow(                                                      // Arrow mixin
        arrowDirection: 'top',
        arrowHeight: 10px,
        arrowWidth: 16px,
        color: $white,
        positioned: true
      );
    }
  }
}

.easter-egg
  display: flex
  align-items: center
  justify-content: center

  &__spacheman
    cursor: pointer
    user-select: none
    transition: transform 250ms ease
    transform: scale(1)
    transition-delay: 3.4s

    &:hover
      transform: scale(0)

      & + .easter-egg__rocket
        left: 55vw
        top: -10vh

  &__rocket
    left: 0vw
    top: 110vh
    z-index: 1
    color: black                                        // Satisfies aXe warning
    position: fixed
    perspective: 1000px;
    transition: 4s linear
    transform: rotate(-20deg)
    backface-visibility: hidden;
    animation: fly 4s linear infinite;

@keyframes fly {
  20%, ,40%, 60%, 80% {
    transform: rotate(-20deg)
  }

  10%, 30%, 50%, 70%, 90% {
    transform: rotate(-25deg)
  }
}
